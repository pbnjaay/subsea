// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Shift {
  id             Int        @id @default(autoincrement())
  startAt        DateTime
  endAt          DateTime
  isBasicDone    Boolean    @default(false)
  isAlarmChecked Boolean    @default(false)
  isRoomChecked  Boolean    @default(false)
  supervisor     User       @relation(fields: [userId], references: [id])
  activities     Activity[]
  createdAt      DateTime   @default(now())
  userId         Int
}

model Activity {
  id          Int      @id @default(autoincrement())
  description String   @db.Text
  system      System   @default(ACE)
  state       State    @default(OPEN)
  type        Type     @default(INCIDENT)
  createdAt   DateTime @default(now())
  Shift       Shift    @relation(fields: [shiftId], references: [id], onDelete: Cascade)
  shiftId     Int
}

model Profile {
  id        Int      @id @default(autoincrement())
  avatarUrl String
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int      @unique
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  username  String   @unique @db.VarChar(60)
  password  String
  salt      String
  fullName  String
  isAdmin   Boolean  @default(false)
  createdAt DateTime @default(now())
  Shift     Shift[]
  profile   Profile?
}

enum System {
  RAFIA
  MAINONE
  ACE
  SAT3
}

enum State {
  OPEN
  CLOSED
  IN_PROGRESS
}

enum Type {
  PLAINTE
  CALL_ID
  SIGNALISATION
  INCIDENT
  OTHER
}
